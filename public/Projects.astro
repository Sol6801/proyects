---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import AWS from "./icons/AWS.astro"
import NeonTech from "./icons/Neon.astro"
import Prisma from "./icons/Prisma.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import JavaScript from "./icons/JavaScript.astro"
import HTML from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import LinkButton from "./LinkButton.astro"
import Vercel from "./icons/Vercel.astro"
import Node from "./icons/Node.astro"
import Express from "./icons/Express.astro"
import Cohere from "./icons/Cohere.astro"


const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  AWS: {
    name: "AWS",
    class: "bg-black text-white",
    icon: AWS, 
  },
  NEON_TECH: {
    name: "Neon Tech",
    class: "bg-green-600 text-white",
    icon: NeonTech, 
  },
  PRISMA: {
    name: "Prisma ORM",
    class: "bg-black text-white",
    icon: Prisma, 
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-400 text-black",
    icon: JavaScript, 
  },
  HTML: {
    name: "HTML",
    class: "bg-orange-500 text-white",
    icon: HTML, 
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500 text-white",
    icon: CSS,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-gray-800 text-white",
    icon: Bootstrap,
  },
  VERCEL:{
    name:"Vercel",
    class:"bg-gray-900 text-white",
    icon: Vercel,
  },
  NODE:{
    name:"Node.js",
    class:"bg-gray-600 text-white",
    icon: Node,
  },
  EXPRESS:{
    name:"Express.js",
    class:"bg-gray-800 text-white",
    icon: Express,
  },
  COHERE:{
    name:"Cohere",
    class:"bg-gray-800 text-white",
    icon: Cohere,
  }
};

const PROJECTS = [
  {
    title: "Dunya Idiomas",
    description:
      "Sitio web informativo multilingüe desarrollado para una academia de idiomas. Implementado con Next.js y Next Intl para ofrecer soporte en varios idiomas.",
    link: "https://dunyaidiomas.com", // Agrega el enlace si lo tienes
    github: "https://github.com/Sol6801/dunya", // Agrega el repositorio si lo tienes
    image: "/projects/dunyaidiomas.webp", // Cambia la ruta si es necesario
    tags: [TAGS.NEXT, TAGS.TAILWIND,],
  },
  {
    title: "Planner Buddy",
    description:
      "App web dinámica para tomar decisiones en grupo de forma interactiva. Creada con Next.js, Tailwind CSS, AWS, Neon Tech, Prisma y Zustand.",
    link: "https://planner-buddy.vercel.app", // Agrega el enlace si lo tienes
    github: "https://github.com/Sol6801/proyecto-final-front", // Agrega el repositorio si lo tienes
    image: "/projects/plannerbuddy.webp", // Cambia la ruta si es necesario
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.COHERE, TAGS.JAVASCRIPT, TAGS.AWS, TAGS.NEON_TECH, TAGS.VERCEL, TAGS.NODE, TAGS.EXPRESS, TAGS.PRISMA],
  },
  {
    title: "Recorriendo Argentina",
    description:
      "Sitio web informativo sobre Argentina, desarrollado con HTML, CSS y JavaScript para una experiencia interactiva.",
    link: "https://sol6801.github.io/TPStaticWeb/index.html", // Agrega el enlace si lo tienesplanner-buddy.vercel.app/
    github: "https://github.com/Sol6801/TPStaticWeb", // Agrega el repositorio si lo tienes
    image: "/projects/recorriendoargentina.webp", // Cambia la ruta si es necesario
    tags: [TAGS.HTML, TAGS.CSS,TAGS.JAVASCRIPT],
  },
  {
    title: "Maderera",
    description:
      "Sitio web estático desarrollado por encargo para una maderera. Implementado con HTML y CSS vainilla para garantizar una presencia en línea efectiva.",
    link: "https://sol6801.github.io/maderasbarbero/", // Agrega el enlace si lo tienes
    github:"https://github.com/Sol6801/maderasbarbero",
    image: "/projects/maderasbarbero.webp", // Cambia la ruta si es necesario
    tags: [TAGS.HTML, TAGS.CSS],
  },
  {
    title: "Panadería",
    description:
      "Sitio web estático desarrollado para una panadería. Creado con HTML y CSS vainilla para destacar los productos y servicios del negocio.",
    link: "https://sol6801.github.io/BAmulti/", // Agrega el enlace si lo tienes
    github:"https://github.com/Sol6801/BAmulti",
    image: "/projects/panaderia.webp", // Cambia la ruta si es necesario
    tags: [TAGS.HTML, TAGS.CSS, TAGS.BOOTSTRAP],
  },
];

---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl border-transparent">
      <img 
  alt="Proyecto realizado" 
  class="rounded-xl object-cover object-top w-full h-72 transition duration-500 scale-100 hover:scale-90" 
  loading="lazy" 
  src={image} 
/>



 </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row flex-wrap mb-2 gap-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



